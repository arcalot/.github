{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>redhat-exd-rebuilds/renovate-config",
    ":disableDependencyDashboard",
    ":pinDigestsDisabled"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["github.com/arcalot/*"],
      "schedule": ["at any time"],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["at any time"]
      }
    }
  ]
}
